<?xml version="1.0"?>
<root xmlns="http://skin.calameo.com/2.0" backgroundsymbol="skin#background" backgroundColor="0x242d33">
    <library name="skin" source="http://sk.calameo.com/2.0/interface/skin.swf"/>
    <element depth="1" symbol="skin#menuBar" autoResize="true" maintainaspectratio="false" left="0" top="0" right="0" height="50"></element>
    <logo depth="2" symbol="logo" url="http://athlonproduction.com" left="8" top="4"></logo>
    <timeline orientation="horizontal" depth="3" left="75" right="75" height="50" top="60">
        <button upState="skin#btnTimeLineOn" overState="skin#btnTimelineHover"></button>
    </timeline>
    <viewer depth="4" left="50" right="50" top="90" bottom="40"></viewer>
    <layout right="8" top="2" orientation="horizontal" spacer="0" depth="6" alignment="right">
        <button action="verticalSubmenu" backgroundColor="0xFFFFFF" borderColor="0x000000" borderSize="2" cornerRadius="10" horizontalMargin="4" verticalMargin="4" spacer="4" upState="skin#btnBookOn" overState="skin#btnBookHover" disabledState="skin#btnBookOff">
            <button action="book" tooltip="label" upState="skin#btnBookModeOn" overState="skin#btnBookModeHover" disabledState="skin#btnBookModeOff"></button>
            <button action="diaporama" tooltip="label" upState="skin#btnSlideModeOn" overState="skin#btnSlideModeHover" disabledState="skin#btnSlideModeOff"></button>
            <button action="thumbnails" tooltip="label" upState="skin#btnIndexModeOn" overState="skin#btnIndexModeHover" disabledState="skin#btnIndexModeOff"></button>
        </button>
        <button action="toc" upState="skin#btnTocOn" overState="skin#btnTocHover" disabledState="skin#btnTocOff"></button>
        <button action="subscription" upState="skin#btnSubscriptionOn" overState="skin#btnSubscriptionHover" disabledState="skin#btnSubscriptionOff"></button>
        <button action="search" tooltip="Recherche" upState="skin#btnSearchOn" overState="skin#btnSearchHover" disabledState="skin#btnSearchOff"></button>
        <button action="zoom" upState="skin#btnZoomOn" overState="skin#btnZoomHover" disabledState="skin#btnZoomOff"></button>
        <button action="fullScreen" upState="skin#btnFullscreenOn" overState="skin#btnFullscreenHover" disabledState="skin#btnFullscreenOff"></button>
        <button action="download" upState="skin#btnDownloadOn" overState="skin#btnDownloadHover" disabledState="skin#btnDownloadOff"></button>
        <button action="print" upState="skin#btnPrintOn" overState="skin#btnPrintHover" disabledState="skin#btnPrintOff"></button>
    </layout>
    <layout left="0" bottom="0" orientation="horizontal" spacer="0" depth="6" alignment="left,bottom">
        <button action="volume" upState="skin#btnVolumeOn" overState="skin#btnVolumeHover" disabledState="skin#btnVolumeOff"></button>
    </layout>
    <layout depth="5" left="7" spacer="16" verticalCenter="0" orientation="vertical" alignment="top,left">
        <button action="left" upState="skin#PreviousOn" overState="skin#PreviousHover" disabledState="skin#PreviousOff"></button>
        <button action="fullleft" upState="skin#FirstOn" overState="skin#FirstHover" disabledState="skin#FirstOff"></button>
    </layout>
    <layout depth="5" right="7" spacer="16" verticalCenter="0" orientation="vertical" alignment="top,right">
        <button action="right" upState="skin#NextOn" overState="skin#NextHover" disabledState="skin#NextOff"></button>
        <button action="fullright" upState="skin#LastOn" overState="skin#LastHover" disabledState="skin#LastOff"></button>
    </layout>
</root>